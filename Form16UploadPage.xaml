<!-- filepath: c:\Users\primanda\Returnly\Form16UploadPage.xaml -->
<Page x:Class="Returnly.Form16UploadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Returnly"
      xmlns:vm="clr-namespace:Returnly.ViewModels"
      Title="Upload Form 16">

    <Page.DataContext>
        <vm:Form16UploadPageViewModel />
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <!-- Notification Panel - Fixed position at top -->
        <Border x:Name="NotificationPanel"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="16,12"
                Margin="40,20,40,0"
                Visibility="{Binding NotificationVisibility}"
                Background="{Binding NotificationBackground}"
                Panel.ZIndex="1000">
            <TextBlock x:Name="NotificationTextBlock"
                      Text="{Binding NotificationText}"
                      FontWeight="SemiBold"
                      TextWrapping="Wrap"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,60,0,0">
            <Grid Margin="40,20,40,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <ui:Button Content="â† Back to Home"
                              Command="{Binding BackToHomeCommand}"
                              Appearance="Secondary"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Upload Your Form 16"
                              FontSize="36"
                              FontWeight="Light"
                              Style="{StaticResource HeroTextStyle}"
                              Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Upload your Form 16 document to automatically extract tax information"
                              FontSize="16"
                              Style="{StaticResource SubtitleTextStyle}"
                              Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Upload Section -->
                <ui:CardControl Grid.Row="1"
                               Style="{StaticResource ModernCardStyle}"
                               Margin="0,0,0,20">
                    <StackPanel Margin="40,30,40,30">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Upload Form 16 Documents"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"/>
                            <ui:Button Content="Clear All"
                                      Command="{Binding ClearAllFilesCommand}"
                                      Appearance="Secondary"
                                      Margin="20,0,0,0"
                                      Padding="8,4"/>
                        </StackPanel>
                        
                        <TextBlock Text="Upload Form 16 Part A, Part B, and optionally Part B Annexure separately for better extraction accuracy"
                                  FontSize="14"
                                  Style="{StaticResource SubtitleTextStyle}"
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,20"/>

                        <!-- Part A Upload -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Form 16 Part A (Certificate)"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Contains employee details, employer information, and total TDS deducted"
                                      FontSize="12"
                                      Style="{StaticResource SubtitleTextStyle}"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <Border x:Name="PartAUploadBorder"
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Background="{DynamicResource LayerFillColorDefaultBrush}"
                                   Padding="20"
                                   MinHeight="120">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ui:SymbolIcon Symbol="Document24"
                                                  FontSize="32"
                                                  Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,8"/>
                                    
                                    <TextBlock x:Name="PartAFilePathTextBlock"
                                              Text="{Binding PartAFileText}"
                                              FontSize="14"
                                              HorizontalAlignment="Center"
                                              Style="{StaticResource SubtitleTextStyle}"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Margin="0,0,0,8"/>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ui:Button Content="Choose Part A"
                                                  Command="{Binding UploadPartACommand}"
                                                  Appearance="Primary"
                                                  Margin="0,0,5,0">
                                            <ui:Button.Icon>
                                                <ui:SymbolIcon Symbol="Folder24"/>
                                            </ui:Button.Icon>
                                        </ui:Button>
                                        <ui:Button x:Name="ClearPartAButton"
                                                  Content="Clear"
                                                  Command="{Binding ClearPartACommand}"
                                                  Appearance="Secondary"
                                                  Margin="5,0,0,0"
                                                  Visibility="{Binding PartAClearButtonVisibility}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Part B Upload -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Form 16 Part B (Statement of Income)"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Contains salary breakdowns, deductions, and taxable income calculations"
                                      FontSize="12"
                                      Style="{StaticResource SubtitleTextStyle}"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <Border x:Name="PartBUploadBorder"
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Background="{DynamicResource LayerFillColorDefaultBrush}"
                                   Padding="20"
                                   MinHeight="120">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ui:SymbolIcon Symbol="DocumentTable24"
                                                  FontSize="32"
                                                  Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,8"/>
                                    
                                    <TextBlock x:Name="PartBFilePathTextBlock"
                                              Text="{Binding PartBFileText}"
                                              FontSize="14"
                                              HorizontalAlignment="Center"
                                              Style="{StaticResource SubtitleTextStyle}"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Margin="0,0,0,8"/>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ui:Button Content="Choose Part B"
                                                  Command="{Binding UploadPartBCommand}"
                                                  Appearance="Primary"
                                                  Margin="0,0,5,0">
                                            <ui:Button.Icon>
                                                <ui:SymbolIcon Symbol="Folder24"/>
                                            </ui:Button.Icon>
                                        </ui:Button>
                                        <ui:Button x:Name="ClearPartBButton"
                                                  Content="Clear"
                                                  Command="{Binding ClearPartBCommand}"
                                                  Appearance="Secondary"
                                                  Margin="5,0,0,0"
                                                  Visibility="{Binding PartBClearButtonVisibility}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Part B Annexure Upload (Optional) -->
                        <StackPanel Margin="0,0,0,30">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Form 16 Part B Annexure (Optional)"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource HeroTextStyle}"/>
                                <Border Background="{DynamicResource SystemFillColorSuccessBrush}"
                                       CornerRadius="10"
                                       Padding="6,2"
                                       Margin="10,0,0,0">
                                    <TextBlock Text="Optional"
                                              FontSize="10"
                                              FontWeight="Bold"
                                              Foreground="White"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="Contains quarterly TDS details and other deductions (if available)"
                                      FontSize="12"
                                      Style="{StaticResource SubtitleTextStyle}"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                      Margin="0,0,0,10"/>
                            
                            <Border x:Name="AnnexureUploadBorder"
                                   BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                   BorderThickness="2"
                                   CornerRadius="8"
                                   Background="{DynamicResource LayerFillColorDefaultBrush}"
                                   Padding="20"
                                   MinHeight="120">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ui:SymbolIcon Symbol="DocumentData24"
                                                  FontSize="32"
                                                  Foreground="{DynamicResource AccentTextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,8"/>
                                    
                                    <TextBlock x:Name="AnnexureFilePathTextBlock"
                                              Text="{Binding AnnexureFileText}"
                                              FontSize="14"
                                              HorizontalAlignment="Center"
                                              Style="{StaticResource SubtitleTextStyle}"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Margin="0,0,0,8"/>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ui:Button Content="Choose Annexure"
                                                  Command="{Binding UploadAnnexureCommand}"
                                                  Appearance="Secondary"
                                                  Margin="0,0,5,0">
                                            <ui:Button.Icon>
                                                <ui:SymbolIcon Symbol="Folder24"/>
                                            </ui:Button.Icon>
                                        </ui:Button>
                                        <ui:Button x:Name="ClearAnnexureButton"
                                                  Content="Clear"
                                                  Command="{Binding ClearAnnexureCommand}"
                                                  Appearance="Secondary"
                                                  Margin="5,0,0,0"
                                                  Visibility="{Binding AnnexureClearButtonVisibility}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Upload Status Summary -->
                        <Border x:Name="UploadStatusPanel"
                               Background="{DynamicResource LayerFillColorAltBrush}"
                               CornerRadius="8"
                               Padding="15"
                               Margin="0,0,0,20"
                               Visibility="{Binding UploadStatusVisibility}">
                            <StackPanel>
                                <TextBlock Text="Upload Status"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource HeroTextStyle}"
                                          Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding StatusItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                                <TextBlock Text="{Binding Icon}" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Text}" FontSize="12"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Process Button with Progress -->
                        <StackPanel HorizontalAlignment="Center">
                            <ui:Button x:Name="ProcessButton"
                                      Content="{Binding ProcessButtonText}"
                                      Command="{Binding ProcessForm16Command}"
                                      IsEnabled="{Binding CanProcess}"
                                      Appearance="Primary"
                                      Padding="20,12"
                                      Margin="0,0,0,10">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="Play24"/>
                                </ui:Button.Icon>
                            </ui:Button>
                            
                            <ui:ProgressRing x:Name="ProgressIndicator"
                                            IsIndeterminate="True"
                                            Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Width="32"
                                            Height="32"
                                            Margin="0,10,0,0"/>
                            
                            <TextBlock x:Name="ProcessingStatusTextBlock"
                                      Text="{Binding ProcessingStatusText}"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      Style="{StaticResource SubtitleTextStyle}"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ui:CardControl>

                <!-- Processing Results -->
                <ui:CardControl x:Name="ResultsPanel"
                               Grid.Row="2"
                               Style="{StaticResource ModernCardStyle}"
                               Margin="0,0,0,20"
                               Visibility="{Binding ResultsVisibility}">
                    <StackPanel Margin="40,30,40,30">
                        <TextBlock Text="Processing Complete!"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Style="{StaticResource HeroTextStyle}"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="ExtractedDataTextBlock"
                                  Text="{Binding ExtractedDataText}"
                                  FontSize="14"
                                  Style="{StaticResource SubtitleTextStyle}"
                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,20"/>
                        
                        <ui:Button Content="Continue to Tax Forms"
                                  Command="{Binding ContinueToTaxFormsCommand}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Center">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowRight24"/>
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>
                </ui:CardControl>

                <!-- Instructions Section -->
                <ui:CardControl Grid.Row="3"
                               Style="{StaticResource ModernCardStyle}">
                    <StackPanel Margin="40,30,40,30">
                        <TextBlock Text="What happens next?"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Style="{StaticResource HeroTextStyle}"
                                  Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Step 1 -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <Border Background="{DynamicResource SystemFillColorSuccessBrush}"
                                       CornerRadius="20"
                                       Width="40"
                                       Height="40"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="1"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Document Analysis"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource HeroTextStyle}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="We'll extract all relevant tax information from your Form 16 using advanced OCR technology"
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          Style="{StaticResource SubtitleTextStyle}"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <!-- Step 2 -->
                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                <Border Background="{DynamicResource SystemFillColorCautionBrush}"
                                       CornerRadius="20"
                                       Width="40"
                                       Height="40"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="2"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Auto-Fill Forms"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource HeroTextStyle}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="Tax forms will be automatically populated with your information, saving you time and reducing errors"
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          Style="{StaticResource SubtitleTextStyle}"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <!-- Step 3 -->
                            <StackPanel Grid.Column="2">
                                <Border Background="{DynamicResource SystemFillColorAttentionBrush}"
                                       CornerRadius="20"
                                       Width="40"
                                       Height="40"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="3"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Review &amp; Submit"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Style="{StaticResource HeroTextStyle}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="Review the extracted information, make any necessary corrections, and submit your tax return"
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          Style="{StaticResource SubtitleTextStyle}"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:CardControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>