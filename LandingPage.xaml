<Page x:Class="Returnly.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Returnly">

    <!-- Main Content -->
    <ScrollViewer Grid.Row="0"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="40,20,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hero Section -->
        <ui:CardControl Grid.Row="0"
                        Style="{StaticResource ModernCardStyle}"
                        Margin="0,0,0,30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Margin="50,40,30,40"
                            VerticalAlignment="Center">
                    <TextBlock Text="Welcome to Returnly!"
                               FontSize="48"
                               Style="{StaticResource HeroTextStyle}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Your intelligent tax filing assistant"
                               FontSize="20"
                               Style="{StaticResource SubtitleTextStyle}"
                               Margin="0,0,0,30"
                               LineHeight="28"/>

                    <StackPanel Orientation="Horizontal">
                        <ui:Button Content="Get Started"
                                   Appearance="Primary"
                                   Padding="24,12"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   CornerRadius="8"
                                   Margin="0,0,16,0"
                                   Click="GetStarted_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Play24"/>
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button Content="Learn More"
                                   Appearance="Secondary"
                                   Padding="24,12"
                                   FontSize="16"
                                   CornerRadius="8"
                                   Click="LearnMore_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Info24"/>
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>
                </StackPanel>

                <!-- Hero Icon -->
                <Border Grid.Column="1"
                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                        CornerRadius="50"
                        Width="100"
                        Height="100"
                        Margin="30,40,50,40"
                        VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Calculator24"
                                   FontSize="48"
                                   Foreground="White"/>
                </Border>
            </Grid>
        </ui:CardControl>

        <!-- Features Section -->
        <TextBlock Grid.Row="1"
                   Text="Features"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="8,0,0,20"
                   Style="{StaticResource HeroTextStyle}"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Feature 1 -->
            <ui:CardControl Grid.Column="0"
                            Style="{StaticResource ModernCardStyle}">
                <StackPanel Margin="30,25,30,30"
                            HorizontalAlignment="Center">
                    <Border Background="{DynamicResource SystemFillColorSuccessBrush}"
                            CornerRadius="25"
                            Width="50"
                            Height="50"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="DocumentCheckmark24"
                                       FontSize="24"
                                       Foreground="White"/>
                    </Border>

                    <TextBlock Text="Smart Filing"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"
                               TextAlignment="Center"
                               Style="{StaticResource HeroTextStyle}"/>

                    <TextBlock Text="Automated tax form completion with intelligent suggestions"
                               FontSize="14"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Style="{StaticResource SubtitleTextStyle}"
                               LineHeight="20"/>
                </StackPanel>
            </ui:CardControl>

            <!-- Feature 2 -->
            <ui:CardControl Grid.Column="1"
                            Style="{StaticResource ModernCardStyle}">
                <StackPanel Margin="30,25,30,30"
                            HorizontalAlignment="Center">
                    <Border Background="{DynamicResource SystemFillColorCautionBrush}"
                            CornerRadius="25"
                            Width="50"
                            Height="50"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="Shield24"
                                       FontSize="24"
                                       Foreground="White"/>
                    </Border>

                    <TextBlock Text="Secure &amp; Private"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"
                               TextAlignment="Center"
                               Style="{StaticResource HeroTextStyle}"/>

                    <TextBlock Text="Bank-level encryption keeps your financial data safe"
                               FontSize="14"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Style="{StaticResource SubtitleTextStyle}"
                               LineHeight="20"/>
                </StackPanel>
            </ui:CardControl>

            <!-- Feature 3 -->
            <ui:CardControl Grid.Column="2"
                            Style="{StaticResource ModernCardStyle}">
                <StackPanel Margin="30,25,30,30"
                            HorizontalAlignment="Center">
                    <Border Background="{DynamicResource SystemFillColorAttentionBrush}"
                            CornerRadius="25"
                            Width="50"
                            Height="50"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center">
                        <ui:SymbolIcon Symbol="Flash24"
                                       FontSize="24"
                                       Foreground="White"/>
                    </Border>

                    <TextBlock Text="Fast Processing"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"
                               TextAlignment="Center"
                               Style="{StaticResource HeroTextStyle}"/>

                    <TextBlock Text="Complete your tax return in minutes, not hours"
                               FontSize="14"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Style="{StaticResource SubtitleTextStyle}"
                               LineHeight="20"/>
                </StackPanel>
            </ui:CardControl>
        </Grid>
    </Grid>
</ScrollViewer>
</Page>
