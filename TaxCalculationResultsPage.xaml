<!-- filepath: c:\Users\primanda\Returnly\TaxCalculationResultsPage.xaml -->
<Page x:Class="Returnly.TaxCalculationResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Returnly"
      Title="Tax Calculation Results">

    <Grid>
        <!-- Notification Panel -->
        <Border x:Name="NotificationPanel"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="16,12"
                Margin="40,20,40,0"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <TextBlock x:Name="NotificationTextBlock"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,60,0,0">
            <Grid Margin="40,20,40,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0"
                        Margin="0,0,0,30">
                    <ui:Button Content="← Back to Tax Input"
                               Click="BackToTaxInput_Click"
                               Appearance="Secondary"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Tax Calculation Results"
                               FontSize="36"
                               FontWeight="Light"
                               Style="{StaticResource HeroTextStyle}"
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="SubtitleTextBlock"
                               Text="{Binding SubtitleText}"
                               FontSize="16"
                               Style="{StaticResource SubtitleTextStyle}"
                               Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Summary Cards -->
                <Grid Grid.Row="1"
                        Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Taxable Income Card -->
                    <ui:CardControl Grid.Column="0"
                            Style="{StaticResource ModernCardStyle}"
                            Margin="0,0,10,0">
                        <StackPanel Margin="20,15,20,20"
                                HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Calculator24"
                                    FontSize="24"
                                           Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                            <TextBlock Text="Taxable Income"
                                    FontSize="12"
                                       Style="{StaticResource SubtitleTextStyle}"
                                       TextAlignment="Center"
                                    Margin="0,0,0,4"/>
                            <TextBlock x:Name="TaxableIncomeTextBlock"
                                    Text="{Binding TaxableIncomeText}"
                                       FontSize="18"
                                    FontWeight="SemiBold"
                                       Style="{StaticResource HeroTextStyle}"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- Tax Liability Card -->
                    <ui:CardControl Grid.Column="1"
                            Style="{StaticResource ModernCardStyle}"
                            Margin="5,0,5,0">
                        <StackPanel Margin="20,15,20,20"
                                HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Receipt24"
                                    FontSize="24"
                                           Foreground="{DynamicResource SystemFillColorCautionBrush}"
                                           Margin="0,0,0,8"/>
                            <TextBlock Text="Tax Liability"
                                    FontSize="12"
                                       Style="{StaticResource SubtitleTextStyle}"
                                       TextAlignment="Center"
                                    Margin="0,0,0,4"/>
                            <TextBlock x:Name="TaxLiabilityTextBlock"
                                    Text="{Binding TaxLiabilityText}"
                                       FontSize="18"
                                    FontWeight="SemiBold"
                                       Style="{StaticResource HeroTextStyle}"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- TDS Deducted Card -->
                    <ui:CardControl Grid.Column="2"
                            Style="{StaticResource ModernCardStyle}"
                            Margin="5,0,5,0">
                        <StackPanel Margin="20,15,20,20"
                                HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Payment24"
                                    FontSize="24"
                                           Foreground="{DynamicResource SystemFillColorAttentionBrush}"
                                           Margin="0,0,0,8"/>
                            <TextBlock Text="TDS Deducted"
                                    FontSize="12"
                                       Style="{StaticResource SubtitleTextStyle}"
                                       TextAlignment="Center"
                                    Margin="0,0,0,4"/>
                            <TextBlock x:Name="TDSDeductedTextBlock"
                                    Text="{Binding TDSDeductedText}"
                                       FontSize="18"
                                    FontWeight="SemiBold"
                                       Style="{StaticResource HeroTextStyle}"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- Refund/Due Card -->
                    <ui:CardControl Grid.Column="3"
                            Style="{StaticResource ModernCardStyle}"
                            Margin="10,0,0,0">
                        <StackPanel Margin="20,15,20,20"
                                HorizontalAlignment="Center">
                            <ui:SymbolIcon x:Name="RefundDueIcon"
                                    Symbol="{Binding RefundDueIconSymbol}"
                                    FontSize="24"
                                           Foreground="{Binding RefundDueIconBrush}"
                                           Margin="0,0,0,8"/>
                            <TextBlock x:Name="RefundDueLabel"
                                    Text="{Binding RefundDueLabel}"
                                    FontSize="12"
                                       Style="{StaticResource SubtitleTextStyle}"
                                       TextAlignment="Center"
                                    Margin="0,0,0,4"/>
                            <TextBlock x:Name="RefundDueAmountTextBlock"
                                    Text="{Binding RefundDueAmountText}"
                                       FontSize="18"
                                    FontWeight="SemiBold"
                                       Style="{StaticResource HeroTextStyle}"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </ui:CardControl>
                </Grid>

                <!-- Detailed Results -->
                <StackPanel Grid.Row="2">

                    <!-- Tax Breakdown Section -->
                    <ui:CardControl Style="{StaticResource ModernCardStyle}"
                            Margin="0,0,0,20">
                        <StackPanel Margin="30,25,30,30">
                            <TextBlock Text="Tax Calculation Breakdown"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Style="{StaticResource HeroTextStyle}"
                                       Margin="0,0,0,20"/>

                            <!-- Tax Slabs List -->
                            <!-- Column Headers -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Income Slab" 
                                           FontWeight="SemiBold" 
                                           Style="{StaticResource SubtitleTextStyle}"
                                           Padding="5"/>
                                <TextBlock Grid.Column="1" 
                                           Text="Taxable Amount" 
                                           FontWeight="SemiBold" 
                                           Style="{StaticResource SubtitleTextStyle}"
                                           TextAlignment="Right"
                                           Padding="5"/>
                                <TextBlock Grid.Column="2" 
                                           Text="Tax Rate" 
                                           FontWeight="SemiBold" 
                                           Style="{StaticResource SubtitleTextStyle}"
                                           TextAlignment="Right"
                                           Padding="5"/>
                                <TextBlock Grid.Column="3" 
                                           Text="Tax Amount" 
                                           FontWeight="SemiBold" 
                                           Style="{StaticResource SubtitleTextStyle}"
                                           TextAlignment="Right"
                                           Padding="5"/>
                            </Grid>
                            
                            <!-- Separator Line -->
                            <Border Height="1" 
                                    Background="{DynamicResource ControlStrokeColorDefaultBrush}" 
                                    Margin="0,0,0,10"/>
                            
                            <ListView x:Name="TaxSlabsListView"
                                      ItemsSource="{Binding TaxBreakdown}"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                                CornerRadius="6"
                                                Padding="8"
                                                Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                        Text="{Binding SlabDescription}"
                                                           VerticalAlignment="Center"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           Padding="5"/>
                                                <TextBlock Grid.Column="1"
                                                        Text="{Binding IncomeInSlab, StringFormat='₹{0:N0}'}"
                                                           VerticalAlignment="Center"
                                                        TextAlignment="Right"
                                                           FontFamily="Consolas"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           Padding="5"/>
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding TaxRate, StringFormat={}{0}%}"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Right"
                                                           FontFamily="Consolas"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                           Padding="5"/>

                                                <TextBlock Grid.Column="3"
                                                        Text="{Binding TaxAmount, StringFormat=₹{0:N0}}"
                                                           VerticalAlignment="Center"
                                                        TextAlignment="Right"
                                                           FontWeight="SemiBold"
                                                           FontFamily="Consolas"
                                                           Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                                           Padding="5"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Tax Summary -->
                            <Border BorderThickness="0,2,0,0"
                                    BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    Margin="0,20,0,0"
                                    Padding="20,20,20,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Summary Header -->
                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                               Text="Tax Summary"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Style="{StaticResource HeroTextStyle}"
                                               Margin="0,0,0,15"/>

                                    <TextBlock Grid.Row="1"
                                            Grid.Column="0"
                                            Text="Subtotal (Income Tax):"
                                               Style="{StaticResource SubtitleTextStyle}"
                                               Margin="0,5"/>
                                    <TextBlock Grid.Row="1"
                                            Grid.Column="1"
                                            x:Name="SubtotalTextBlock"
                                            Text="{Binding SubtotalText}"
                                               TextAlignment="Right"
                                               FontFamily="Consolas"
                                               FontWeight="Medium"
                                            Style="{StaticResource SubtitleTextStyle}"
                                               Margin="20,5,0,5"/>

                                    <TextBlock Grid.Row="2"
                                            Grid.Column="0"
                                            x:Name="SurchargeLabel"
                                            Text="{Binding SurchargeLabel}"
                                               Style="{StaticResource SubtitleTextStyle}"
                                               Visibility="{Binding IsSurchargeVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               Margin="0,5"/>
                                    <TextBlock Grid.Row="2"
                                            Grid.Column="1"
                                            x:Name="SurchargeTextBlock"
                                            Text="{Binding SurchargeText}"
                                               TextAlignment="Right"
                                               FontFamily="Consolas"
                                               FontWeight="Medium"
                                            Style="{StaticResource SubtitleTextStyle}"
                                               Visibility="{Binding IsSurchargeVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               Margin="20,5,0,5"/>

                                    <TextBlock Grid.Row="3"
                                            Grid.Column="0"
                                            Text="Health &amp; Education Cess (4%):"
                                               Style="{StaticResource SubtitleTextStyle}"
                                               Margin="0,5"/>
                                    <TextBlock Grid.Row="3"
                                            Grid.Column="1"
                                            x:Name="CessTextBlock"
                                            Text="{Binding CessText}"
                                               TextAlignment="Right"
                                               FontFamily="Consolas"
                                               FontWeight="Medium"
                                            Style="{StaticResource SubtitleTextStyle}"
                                               Margin="20,5,0,5"/>

                                    <!-- Separator -->
                                    <Border Grid.Row="4" Grid.ColumnSpan="2"
                                            Height="1"
                                            Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            Margin="0,10"/>

                                    <TextBlock Grid.Row="5"
                                            Grid.Column="0"
                                            Text="Total Tax Liability:"
                                               FontWeight="Bold"
                                            FontSize="18"
                                               Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                               Margin="0,10,0,5"/>
                                    <TextBlock Grid.Row="5"
                                            Grid.Column="1"
                                            x:Name="TotalTaxTextBlock"
                                            Text="{Binding TotalTaxText}"
                                               TextAlignment="Right"
                                            FontWeight="Bold"
                                            FontSize="18"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                               Margin="20,10,0,5"/>
                                </Grid>
                            </Border>
                            
                            <!-- Effective Tax Rate Card -->
                            <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                               Text="Effective Tax Rate:"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               x:Name="EffectiveRateTextBlock"
                                               Text="{Binding EffectiveRateText}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               FontFamily="Consolas"
                                               VerticalAlignment="Center"
                                               Margin="15,0,0,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- Regime Comparison Section (if available) -->
                    <ui:CardControl x:Name="RegimeComparisonCard"
                            Style="{StaticResource ModernCardStyle}"
                            Margin="0,0,0,20"
                            Visibility="{Binding IsRegimeComparisonVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Margin="30,25,30,30">
                            <TextBlock Text="Tax Regime Comparison"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Style="{StaticResource HeroTextStyle}"
                                       Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Old Regime -->
                                <StackPanel Grid.Column="0"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="Old Tax Regime"
                                            FontWeight="SemiBold"
                                            Margin="0,0,0,10"/>
                                    <TextBlock x:Name="OldRegimeTaxTextBlock"
                                            Text="{Binding OldRegimeTaxText}"
                                            Margin="0,0,0,5"/>
                                    <TextBlock x:Name="OldRegimeRateTextBlock"
                                            Text="{Binding OldRegimeRateText}"
                                            Margin="0,0,0,5"/>
                                </StackPanel>

                                <!-- New Regime -->
                                <StackPanel Grid.Column="1"
                                        Margin="15,0,0,0">
                                    <TextBlock Text="New Tax Regime"
                                            FontWeight="SemiBold"
                                            Margin="0,0,0,10"/>
                                    <TextBlock x:Name="NewRegimeTaxTextBlock"
                                            Text="{Binding NewRegimeTaxText}"
                                            Margin="0,0,0,5"/>
                                    <TextBlock x:Name="NewRegimeRateTextBlock"
                                            Text="{Binding NewRegimeRateText}"
                                            Margin="0,0,0,5"/>
                                </StackPanel>
                            </Grid>

                            <!-- Recommendation -->
                            <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,15,0,0">
                                <StackPanel>
                                    <TextBlock x:Name="RecommendationTextBlock"
                                               Text="{Binding RecommendationText}"
                                               Foreground="White"
                                            FontWeight="SemiBold"
                                               TextAlignment="Center"/>
                                    <TextBlock x:Name="SavingsTextBlock"
                                               Text="{Binding SavingsText}"
                                               Foreground="White"
                                               TextAlignment="Center"
                                            Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ui:CardControl>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">
                    <ui:Button Content="Recalculate"
                               Click="Recalculate_Click"
                               Appearance="Secondary"
                               Margin="0,0,15,0">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="ArrowClockwise24"/>
                        </ui:Button.Icon>
                    </ui:Button>

                    <ui:Button Content="Export Results"
                               Click="ExportResults_Click"
                               Appearance="Secondary"
                               Margin="0,0,15,0">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="DocumentArrowDown24"/>
                        </ui:Button.Icon>
                    </ui:Button>

                    <ui:Button Content="Continue to Returns"
                               Click="ContinueToReturns_Click"
                               Appearance="Primary">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="ArrowRight24"/>
                        </ui:Button.Icon>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>