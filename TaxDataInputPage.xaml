<Page x:Class="Returnly.TaxDataInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:Returnly"
      Title="Tax Data Input">

    <Grid>
        <!-- Notification Panel -->
        <Border x:Name="NotificationPanel"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="16,12"
                Margin="40,20,40,0"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <TextBlock x:Name="NotificationTextBlock"
                      FontWeight="SemiBold"
                      TextWrapping="Wrap"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,60,0,0">
            <Grid Margin="40,20,40,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <ui:Button Content="← Back to Upload"
                              Click="BackToUpload_Click"
                              Appearance="Secondary"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Review &amp; Edit Tax Information"
                              FontSize="36"
                              FontWeight="Light"
                              Style="{StaticResource HeroTextStyle}"
                              Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Review the extracted information from your Form 16 and make any necessary corrections"
                              FontSize="16"
                              Style="{StaticResource SubtitleTextStyle}"
                              Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Progress Indicator -->
                <ui:CardControl Grid.Row="1"
                               Style="{StaticResource ModernCardStyle}"
                               Margin="0,0,0,20">
                    <StackPanel Margin="30,20,30,20" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Background="{DynamicResource SystemFillColorSuccessBrush}"
                               CornerRadius="15"
                               Width="30"
                               Height="30"
                               Margin="0,0,10,0">
                            <ui:SymbolIcon Symbol="Checkmark24" 
                                          Foreground="White" 
                                          FontSize="16"/>
                        </Border>
                        <TextBlock Text="Upload Form 16" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,0"
                                  Style="{StaticResource SubtitleTextStyle}"/>
                        
                        <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                               CornerRadius="15"
                               Width="30"
                               Height="30"
                               Margin="0,0,10,0">
                            <TextBlock Text="2" 
                                      Foreground="White" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Review Data" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,20,0"
                                  FontWeight="SemiBold"
                                  Style="{StaticResource HeroTextStyle}"/>
                        
                        <Border Background="{DynamicResource ControlFillColorDisabledBrush}"
                               CornerRadius="15"
                               Width="30"
                               Height="30"
                               Margin="0,0,10,0">
                            <TextBlock Text="3" 
                                      Foreground="White" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Generate Returns" 
                                  VerticalAlignment="Center"
                                  Style="{StaticResource SubtitleTextStyle}"/>
                    </StackPanel>
                </ui:CardControl>

                <!-- Data Input Sections -->
                <StackPanel Grid.Row="2">
                    
                    <!-- Personal Information Section -->
                    <ui:CardControl Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                        <StackPanel Margin="30,25,30,30">
                            <TextBlock Text="Personal Information"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"
                                      Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Employee Name" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:TextBox x:Name="EmployeeNameTextBox" 
                                               PlaceholderText="Enter your full name"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="PAN Number" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:TextBox x:Name="PANTextBox" 
                                               PlaceholderText="ABCDE1234F"
                                               MaxLength="10"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Assessment Year" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ComboBox x:Name="AssessmentYearComboBox" 
                                             SelectionChanged="AssessmentYearComboBox_SelectionChanged"
                                             Height="32"
                                             FontSize="14"
                                             Padding="8,4"
                                             BorderThickness="1"
                                             Background="{DynamicResource ControlFillColorDefaultBrush}"
                                             BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                                        <!-- Items will be populated dynamically -->
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="Financial Year" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ComboBox x:Name="FinancialYearComboBox" 
                                             IsEnabled="False"
                                             Height="32"
                                             FontSize="14"
                                             Padding="8,4"
                                             BorderThickness="1"
                                             Background="{DynamicResource ControlFillColorDisabledBrush}"
                                             BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                             Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <!-- Items will be populated dynamically -->
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Employer Name" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:TextBox x:Name="EmployerNameTextBox" 
                                               PlaceholderText="Company name"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="TAN Number" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:TextBox x:Name="TANTextBox" 
                                               PlaceholderText="ABCD12345E"
                                               MaxLength="10"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- Salary Information Section -->
                    <ui:CardControl Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                        <StackPanel Margin="30,25,30,30">
                            <TextBlock Text="Salary Information"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"
                                      Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Basic Salary" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="BasicSalaryNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="HRA" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="HRANumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Special Allowance" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="SpecialAllowanceNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="Gross Salary" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="GrossSalaryNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"
                                                 IsReadOnly="True"
                                                 Background="{DynamicResource ControlFillColorDisabledBrush}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="HRA Exemption" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="HRAExemptionNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="LTA Exemption" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="LTAExemptionNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- Deductions Section -->
                    <ui:CardControl Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                        <StackPanel Margin="30,25,30,30">
                            <TextBlock Text="Deductions"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"
                                      Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Standard Deduction" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="StandardDeductionNumberBox" 
                                                 PlaceholderText="50000"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="Professional Tax" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="ProfessionalTaxNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="100"
                                                 LargeChange="1000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Section 80C" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="Section80CNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="Section 80D" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="Section80DNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="5000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Section 80E (Education Loan)" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="Section80ENumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="5000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="Section 80G (Donations)" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="Section80GNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="5000"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ui:CardControl>

                    <!-- Tax Information Section -->
                    <ui:CardControl Style="{StaticResource ModernCardStyle}" Margin="0,0,0,20">
                        <StackPanel Margin="30,25,30,30">
                            <TextBlock Text="Tax Information"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Style="{StaticResource HeroTextStyle}"
                                      Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Total Tax Deducted" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="TotalTaxDeductedNumberBox" 
                                                 PlaceholderText="0.00"
                                                 SpinButtonPlacementMode="Inline"
                                                 SmallChange="1000"
                                                 LargeChange="10000"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                    <TextBlock Text="Taxable Income (Calculated)" 
                                              Margin="0,0,0,5"
                                              Style="{StaticResource SubtitleTextStyle}"/>
                                    <ui:NumberBox x:Name="TaxableIncomeNumberBox" 
                                                 PlaceholderText="0.00"
                                                 IsReadOnly="True"
                                                 Background="{DynamicResource ControlFillColorDisabledBrush}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Quarterly TDS Breakdown -->
                            <Expander Header="Quarterly TDS Breakdown" Margin="0,20,0,0">
                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                        <TextBlock Text="Q1 TDS (Apr-Jun)" 
                                                  Margin="0,0,0,5"
                                                  Style="{StaticResource SubtitleTextStyle}"/>
                                        <ui:NumberBox x:Name="Q1TDSNumberBox" 
                                                     PlaceholderText="0.00"
                                                     SpinButtonPlacementMode="Inline"
                                                     SmallChange="100"
                                                     LargeChange="1000"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,15">
                                        <TextBlock Text="Q2 TDS (Jul-Sep)" 
                                                  Margin="0,0,0,5"
                                                  Style="{StaticResource SubtitleTextStyle}"/>
                                        <ui:NumberBox x:Name="Q2TDSNumberBox" 
                                                     PlaceholderText="0.00"
                                                     SpinButtonPlacementMode="Inline"
                                                     SmallChange="100"
                                                     LargeChange="1000"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                        <TextBlock Text="Q3 TDS (Oct-Dec)" 
                                                  Margin="0,0,0,5"
                                                  Style="{StaticResource SubtitleTextStyle}"/>
                                        <ui:NumberBox x:Name="Q3TDSNumberBox" 
                                                     PlaceholderText="0.00"
                                                     SpinButtonPlacementMode="Inline"
                                                     SmallChange="100"
                                                     LargeChange="1000"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,15">
                                        <TextBlock Text="Q4 TDS (Jan-Mar)" 
                                                  Margin="0,0,0,5"
                                                  Style="{StaticResource SubtitleTextStyle}"/>
                                        <ui:NumberBox x:Name="Q4TDSNumberBox" 
                                                     PlaceholderText="0.00"
                                                     SpinButtonPlacementMode="Inline"
                                                     SmallChange="100"
                                                     LargeChange="1000"/>
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </StackPanel>
                    </ui:CardControl>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0">
                    <ui:Button Content="Calculate Taxes"
                              Click="CalculateTaxes_Click"
                              Appearance="Secondary"
                              Margin="0,0,15,0">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="Calculator24"/>
                        </ui:Button.Icon>
                    </ui:Button>

                    <ui:Button Content="Save Data"
                              Click="SaveData_Click"
                              Appearance="Primary"
                              Margin="0,0,15,0">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="Save24"/>
                        </ui:Button.Icon>
                    </ui:Button>

                    <ui:Button Content="Continue to Returns"
                              Click="ContinueToReturns_Click"
                              Appearance="Primary">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="ArrowRight24"/>
                        </ui:Button.Icon>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>